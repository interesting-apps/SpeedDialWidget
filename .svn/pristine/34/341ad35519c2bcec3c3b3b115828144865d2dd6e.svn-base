<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RadioButton android:id="@+id/edit_speed_dial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_speed_dial_number_string"
        android:onClick="onEditButtonClicked"/>
    <RadioButton android:id="@+id/edit_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_phone_number_string"
        android:onClick="onEditButtonClicked"/>
</RadioGroup>